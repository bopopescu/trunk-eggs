            </th>
            <th tal:condition="python:rkey!=''" class="sorted" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=user#notification_table"><span i18n:translate="">User</span><img src="misc_/Naaya/sort_desc.gif" width="12" height="12" /></a>
            </th>
            </tal:block>
            <th tal:condition="python:skey!='user'" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=user#notification_table"><span i18n:translate="">User</span><img src="misc_/Naaya/sort_not.gif" width="12" height="12" /></a>
            </th>

            <tal:block tal:condition="python:skey=='location'">
            <th tal:condition="python:rkey==''" class="sorted" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=location&amp;rkey=1#notification_table"><span i18n:translate="">Location</span><img src="misc_/Naaya/sort_asc.gif" width="12" height="12" /></a>
            </th>
            <th tal:condition="python:rkey!=''" class="sorted" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=location#notification_table"><span i18n:translate="">Location</span><img src="misc_/Naaya/sort_desc.gif" width="12" height="12" /></a>
            </th>
            </tal:block>
            <th tal:condition="python:skey!='location'" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=location#notification_table"><span i18n:translate="">Location</span><img src="misc_/Naaya/sort_not.gif" width="12" height="12" /></a>
            </th>

            <tal:block tal:condition="python:skey=='notif_type'">
            <th tal:condition="python:rkey==''" class="sorted" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=notif_type&amp;rkey=1#notification_table"><span i18n:translate="">Notification type</span><img src="misc_/Naaya/sort_asc.gif" width="12" height="12" /></a>
            </th>
            <th tal:condition="python:rkey!=''" class="sorted" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=notif_type#notification_table"><span i18n:translate="">Notification type</span><img src="misc_/Naaya/sort_desc.gif" width="12" height="12" /></a>
            </th>
            </tal:block>
            <th tal:condition="python:skey!='notif_type'" class="sorted" scope="col">
                <a rel="nofollow" tal:attributes="href string:${here/absolute_url}/admin_html?query=${query}&amp;skey=notif_type#notification_table"><span i18n:translate="">Notification type</span><img src="misc_/Naaya/sort_not.gif" width="12" height="12" /></a>
            </th>

            <tal:block tal:condition="python:skey=='lang'">

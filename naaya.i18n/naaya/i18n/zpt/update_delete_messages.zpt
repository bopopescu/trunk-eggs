<metal:block use-macro="template/default/macros/page">
<metal:block fill-slot="in-form">

    <h2>This update script will delete all messages containing the string
    you enter here</h2>
    <p>
        String to be searched<br/>
        <textarea  size='30' name='search_string' ></textarea>
    </p>
    <p>
        Check to delete all messages in the translations catalog
        <input type="checkbox" name='delete_all' />
    </p>

</metal:block>
</metal:block>
